@model List<WebUI.Models.At.SubjectCount>

@Html.Partial("_breadcrumb")
@if (Model.Count() <= 0)
{
    @Html.Partial("_nodatafound")
}
else
{
    <div class="row">
        <div class="col">
            <table class="table table-sm table-responsive text-center text-secondary small">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th class="text-start">Course</th>
                        <th>YrSem</th>
                        <th>PaperCode</th>
                        <th class="text-start">PaperName</th>
                        <th>Total</th>
                        <th>Present</th>
                        <th>Absent</th>
                        <th>Malpractice</th>
                        <th>Buffer</th>
                        <th>Pending</th>
                        <th>IO Pending</th>
                        <th>Scan Pending</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                                        <tr class="at-row">
                                            <th scope="row">@i</th>
                                            <td class="text-start">@item.Subject</td>
                                            <td>@item.YearSemester</td>
                                            <td>@item.PaperCode</td>
                                            <td class="text-start">@item.PaperName</td>
                                            <td>@Html.ActionLink(item.Total.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "T", esub = item }, new { @class = "at-total" })</td>
                                            <td>@Html.ActionLink(item.Present.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "P", esub = item }, new { @class = "at-present" })</td>
                                            <td>@Html.ActionLink(item.Absent.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "A", esub = item }, new { @class = "at-absent" })</td>
                                            <td>@Html.ActionLink(item.Malpractice.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "MP", esub = item }, new { @class = "at-malpractice" })</td>
                                            <td>@Html.ActionLink(item.Buffer.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "B", esub = item }, new { @class = "at-buffer" })</td>
                                            <td>@Html.ActionLink(item.Pending.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "ATPENDING", esub = item }, new { @class = "at-pending" })</td>
                                            <td>@Html.ActionLink(item.IOPending.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "IOPENDING", esub = item }, new { @class = "at-io-pending" })</td>
                                            <td>@Html.ActionLink(item.ScanPending.ToString(), "formdataquery", "adboard", new { screen = "subjectcount", query =  "SCANPENDING", esub = item }, new { @class = "at-scan-pending" })</td>
                                            <td>@Html.ActionLink("View", "examcentrecount", "adboard", new { esub = item }, new { @class = "btn btn-info btn-sm" })</td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section scripts {
    <script src="~/Scripts/at_admin_common.js"></script>
}
