<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dr. B.R. AMBEDKAR OPEN UNIVERSITY</title>
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")

    <style>
        .layout {
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: auto auto 1fr auto;
            grid-template-areas: "header" "subheader" "main" "footer";
            height: 100vh;
            overflow: auto;
        }

        .header {
            grid-area: header;
            align-self: self-start;
        }

        .subheader {
            grid-area: subheader;
            align-self: self-start;
        }

        .main {
            grid-area: main;
            padding-top: 1rem;
        }

        .footer {
            grid-area: footer;
        }

        .callout-top {
            padding: 1.25rem;
            margin-top: 1.25rem;
            margin-bottom: 1.25rem;
            border: 1px solid var(--bs-yellow);
            border-top-width: .25rem;
            border-radius: .25rem;
        }

        .callout-top-dark {
            border-top-color: #212529;
        }

        .span-info {
            display: inline-block !important;
            padding: 0 0.25rem 0 0.25rem !important;
            font-weight: 600 !important;
            color: rgba(13, 202, 240, 1) !important;
            background-color: rgba(13, 202, 240, 0.1) !important;
            border: 1px solid rgba(13, 202, 240, 1) !important;
            border-radius: 0.25rem !important;
        }

        .span-danger {
            display: inline-flex !important;
            padding: 0 0.25rem 0 0.25rem !important;
            font-weight: 600 !important;
            color: rgba(220, 53, 69, 1) !important;
            background-color: rgba(220, 53, 69, 0.1) !important;
            border: 1px solid rgba(220, 53, 69, 1) !important;
            border-radius: 0.25rem !important;
        }

        .span-warning {
            display: inline-flex !important;
            padding: 0 0.25rem 0 0.25rem !important;
            font-weight: 600 !important;
            color: rgba(255, 193, 7, 1) !important;
            background-color: rgba(255, 193, 7, 0.1) !important;
            border: 1px solid rgba(255, 193, 7, 1) !important;
            border-radius: 0.25rem !important;
        }

        .span-success {
            display: inline-flex !important;
            padding: 0 0.25rem 0 0.25rem !important;
            font-weight: 600 !important;
            color: rgba(25, 135, 84, 1) !important;
            background-color: rgba(25, 135, 84, 0.1) !important;
            border: 1px solid rgba(25, 135, 84, 1) !important;
            border-radius: 0.25rem !important;
        }

    </style>

</head>
<body>
    <div class="layout">
        <div class="header d-none d-md-block">
            <div class="container">
                <div class="d-flex justify-content-start align-items-center">
                    <img src="~/Images/logo.png" class="w-50 h-50" />
                </div>
            </div>
        </div>
        <div class="subheader sticky-top">
            <nav class="navbar navbar-expand-md navbar-light bg-light">
                <div class="container">
                    <div class="navbar-brand mb-0 h6 d-md-none">BRAOU</div>
                    <div class="d-flex gap-2">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarToggler">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item mb-0 h6">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li class="nav-item mb-0 h6">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                            <li class="nav-item mb-0 h6">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                        </ul>
                        <div class="d-none d-md-block">@Html.Partial("_LoginPartialDesktop")</div>
                        <div class="d-md-none">@Html.Partial("_LoginPartial")</div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="main container">
            @RenderBody()
        </div>
        <footer class="footer bg-light text-secondary">
            <div class="container my-2">
                <span>&copy; @DateTime.Now.Year - Magnetic Infotech Pvt. Ltd., Hyderabad.</span>
            </div>
        </footer>
    </div>

    @*<script src="//unpkg.com/alpinejs" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
