@using Microsoft.AspNet.Identity
@using WebUI.Models.Shared

<ul class="navbar-nav mb-2 mb-lg-0">
    @if (Request.IsAuthenticated && !string.IsNullOrEmpty(UserProfileBO.Instance.UserName))
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <li class="nav-item mb-0 h6 dropdown">
                <a class="nav-link dropdown-toggle d-flex justify-content-center align-items-center gap-2 border rounded-5 px-3 py-2" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
                    </svg>
                    <span>@UserProfileBO.Instance.UserName : @UserProfileBO.Instance.DisplayName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">Log off</a></li>
                </ul>
            </li>
        }
    }
    else
    {
        <li class="nav-item mb-0 h6">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link border rounded-5 px-3 py-2" })
        </li>
    }
</ul>




